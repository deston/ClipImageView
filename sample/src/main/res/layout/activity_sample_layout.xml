<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="match_parent">
    <RelativeLayout android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="25dp"
                    android:layout_centerHorizontal="true">
        <ImageView
                android:id="@+id/user_photo_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/shader1"
                android:layout_centerHorizontal="true"
                android:src="@drawable/photo_icon"
                />
        <TextView android:layout_width="match_parent" android:layout_height="30dp"
                  android:layout_alignParentBottom="true"
                  android:gravity="center"
                  android:textColor="@color/white"
                  android:text="@string/edit"
                  android:textSize="19dp"
                  android:background="@color/shader2"/>
    </RelativeLayout>


</RelativeLayout>